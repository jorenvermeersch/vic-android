<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.VIC" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/dark_gray</item>
        <item name="colorAccent">@color/black</item>

        <!-- Colors -->
        <item name="backgroundColor">@color/white</item>
        <item name="createBackgroundColor">@color/light_blue</item>
        <item name="textColor">@color/black</item>

        <item name="buttonTextColor">@color/white</item>
        <item name="buttonColor">@color/dark_blue</item>

        <item name="navigationBackgroundColor">@color/white</item>
        <item name="navigationTextColor">@color/dark_blue</item>
        <item name="navigationIconColor">@color/blue</item>
        <item name="navigationMenuIconColor">@color/dark_blue</item>

        <item name="cardBackgroundColor">@color/light_gray</item>
        <item name="activeIndicatorColor">@color/blue</item>
        <item name="inactiveIndicatorColor">@color/gray</item>
        <item name="titleAccentColor">@color/dark_blue</item>

        <item name="hintTextColor">@color/gray</item>

        <!-- Font -->
        <item name="android:fontFamily">@font/graphik</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/dark_blue</item>
        <item name="actionOverflowButtonStyle">@style/OverflowButtonStyle</item>
        <item name="android:actionBarPopupTheme">@style/OverflowMenuStyle</item>
    </style>

    <style name="OverflowButtonStyle" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="tint">@color/dark_blue</item>
    </style>


    <style name="OverflowMenuStyle" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textSize">14sp</item>
        <item name="android:colorBackground">@color/light_gray</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:textSize">@dimen/text_sm</item>
        <item name="android:fontFamily">@font/graphik</item>
        <item name="android:layout_height">@dimen/card_height</item>
        <item name="android:background">@drawable/rounded_corners_background</item>
        <item name="android:queryBackground">@android:color/transparent</item>
    </style>
</resources>