<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.VIC" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Colors -->
        <item name="backgroundColor">@color/white</item>
        <item name="textColor">@color/black</item>
        <item name="navigationBackgroundColor">@color/white</item>
        <item name="navigationTextColor">@color/dark_blue</item>
        <item name="navigationIconColor">@color/blue</item>
        <item name="navigationMenuIconColor">@color/dark_blue</item>
        <item name="cardBackgroundColor">@color/light_gray</item>
        <item name="titleAccentColor">@color/dark_blue</item>

        <!-- Font -->
        <item name="android:fontFamily">@font/graphik</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black</item>
        <item name="actionOverflowButtonStyle">@style/OverflowButtonStyle</item>
        <item name="android:actionBarPopupTheme">@style/PopUpMenuStyle</item>
    </style>

    <style name="OverflowButtonStyle" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="tint">@color/dark_blue</item>
    </style>

    <style name="PopUpMenuStyle" parent="Widget.AppCompat.PopupMenu">
        <item name="android:textSize">14sp</item>
    </style>

</resources>