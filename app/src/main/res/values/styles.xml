<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TitleTextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/textColor</item>
        <item name="android:textFontWeight">600</item>
        <item name="android:textSize">@dimen/text_md</item>
    </style>

    <style name="TitleUnderlineStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/title_underline_height</item>
        <item name="android:layout_marginTop">@dimen/title_underline_height</item>
        <item name="android:background">?attr/titleAccentColor</item>
    </style>

    <style name="TitleContainerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/padding_sm</item>
        <item name="android:layout_marginTop">@dimen/padding_md</item>
        <item name="android:layout_marginEnd">@dimen/padding_sm</item>
    </style>
</resources>