<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Layout Components -->
    <style name="LinearLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:divider">@drawable/divider</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingStart">@dimen/padding_sm</item>
        <item name="android:paddingEnd">@dimen/padding_sm</item>
        <item name="android:showDividers">middle</item>
    </style>

    <style name="RecyclerViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Title Component -->
    <style name="TitleTextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/textColor</item>
        <item name="fontFamily">@font/graphik_semibold</item>
        <item name="android:textSize">@dimen/text_md</item>
    </style>

    <style name="TitleUnderlineStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/title_underline_height</item>
        <item name="android:layout_marginTop">@dimen/title_underline_height</item>
        <item name="android:background">?attr/titleAccentColor</item>
    </style>

    <style name="TitleContainerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/padding_ty</item>
    </style>

    <!-- Table Component -->
    <style name="TableLayoutStyle">
        <item name="android:background">@drawable/rounded_corners_background</item>
        <item name="android:paddingStart">@dimen/padding_sm</item>
        <item name="android:paddingEnd">@dimen/padding_sm</item>
        <item name="android:paddingTop">@dimen/padding_sm</item>
        <item name="android:paddingBottom">@dimen/padding_sm</item>
        <item name="android:stretchColumns">*</item>
    </style>

    <style name="TableRowStyle">
        <item name="android:layout_marginBottom">@dimen/padding_sm</item>
    </style>

    <style name="LastTableRowStyle">
        <item name="android:layout_marginBottom">0dp</item>
    </style>

    <style name="TableRowLabelStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">?attr/textColor</item>
        <item name="fontFamily">@font/graphik_semibold</item>
        <item name="android:textSize">@dimen/text_sm</item>
    </style>

    <style name="TableRowItemStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">2</item>
        <item name="android:textColor">?attr/textColor</item>
        <item name="android:textSize">@dimen/text_sm</item>
    </style>

    <!-- Customer and Virtual Machine Cards -->
    <style name="RowStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/card_height</item>
        <item name="android:layout_marginBottom">@dimen/padding_sm</item>
        <item name="android:background">@drawable/rounded_corners_background</item>
    </style>

    <style name="RowTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/padding_md</item>
        <item name="android:textColor">?attr/textColor</item>
        <item name="android:textSize">@dimen/text_sm</item>
    </style>

    <!-- Form Components -->
    <style name="InputStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/rounded_corners_background</item>
        <item name="android:paddingStart">@dimen/padding_sm</item>
        <item name="android:paddingEnd">@dimen/padding_md</item>
        <item name="android:textSize">@dimen/text_sm</item>
        <item name="android:textColorHint">?attr/hintTextColor</item>
    </style>

    <style name="LabelStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/text_sm</item>
        <item name="android:textColor">?attr/textColor</item>
        <item name="android:fontFamily">@font/graphik_semibold</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textColor">?attr/buttonTextColor</item>
        <item name="android:backgroundTint">?attr/buttonColor</item>
        <item name="android:fontFamily">@font/graphik_semibold</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_sm</item>
    </style>

    <style name="TableRowButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TableRowButtonItemStyle">
        <item name="android:layout_width">370dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">#757575</item>
    </style>
</resources>