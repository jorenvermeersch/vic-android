<resources>
    <!-- Base application theme. -->
    <style name="Theme.VIC" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/dark_gray</item>
        <item name="colorAccent">@color/white</item>

        <!-- Colors -->
        <item name="backgroundColor">@color/black</item>
        <item name="createBackgroundColor">@color/black</item>
        <item name="textColor">@color/white</item>

        <item name="buttonTextColor">@color/white</item>
        <item name="buttonColor">@color/dark_blue</item>

        <item name="navigationBackgroundColor">@color/black</item>
        <item name="navigationTextColor">@color/white</item>
        <item name="navigationIconColor">@color/blue</item>
        <item name="navigationMenuIconColor">@color/white</item>

        <item name="cardBackgroundColor">@color/dark_gray</item>
        <item name="activeIndicatorColor">@color/blue</item>
        <item name="inactiveIndicatorColor">@color/black</item>
        <item name="titleAccentColor">@color/white</item>

        <item name="hintTextColor">@color/gray</item>

        <!-- Font -->
        <item name="android:fontFamily">@font/graphik</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black</item>
        <item name="actionOverflowButtonStyle">@style/OverflowButtonStyle</item>
        <item name="android:actionBarPopupTheme">@style/OverflowMenuStyle</item>
    </style>

    <style name="OverflowButtonStyle" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="tint">@color/white</item>
    </style>

    <style name="OverflowMenuStyle" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textSize">14sp</item>
        <item name="android:colorBackground">@color/dark_gray</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>